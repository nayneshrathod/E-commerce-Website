<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <div id="divElement">
      <div class="alert alert-success" role="alert">
        Added
      </div>
    </div>
    <div class="backImage">
        <div class="space">
            <nav class="navbar fixed-top navbar-expand-lg navbar-dark indigo backGround p-3">
                <h1 class="display-5 font-weight-light text-white">ShopperStop</h1>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="justify-content-end collapse navbar-collapse" id="navbarSupportedContent">
                    <p class="text-white cpad">Welcome</p>
                    <p style="text-transform: uppercase" class="text-white cpad user" id=<%= name._id %> ><%=name.name %></p>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                          <a href="/cart" class="nav-link" id="cart">Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout" id="logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

    <div class="listOfProducts">
        <h1 class="text-center my-5">Products</h1>
        <div class="container-fluid flex-container">
            <% for(let i=0; i < data.length; i++) { %>
                <div class="card flex-prop" id=<%= data[i]._id %> style="width: 18rem;">
                    <!-- <img src=<%= data[i].image %> class="card-img-top"/> -->
                    <div class="card-body">
                        <h5 class="card-title"><%=data[i].name %></h5>
                        <p class="card-text"><%=data[i].desc %></p>
                        <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                        <!-- <p class="card-text"><span>Price: </span><%=data[i].price %></p> -->
                        <span class="font-weight-bold">
                        Price: <p class="card-text Price" style="display: inline-block"><%=data[i].price %></p>
                        </span>
                    </div>
                    <!-- <div class="d-flex flex-row justify-content-around"> -->
                    <div class="d-flex flex-row justify-content-around">
                          <div class="input-group mb-3 mx-3">
                            <input type="text" class="form-control cartCheck" placeholder="Quantity" max=<%= data[i].qty %>>
                            <div class="input-group-append">
                              <button class="btn btn-outline-secondary bg-success text-white addToCart" type="button">Add</button>
                            </div>
                          </div>
                  </div>
                    <!-- </div> -->
                </div>
            <% } %>
        </div>
    </div>

    <script src="/js/user.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>
