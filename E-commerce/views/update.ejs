<%- include partials/header.ejs %>
  <div class="container">
    <div class="row">
      <div class="col-sm">
      </div>
      <div class="col-sm-6 mt-5">
        <!-- <div class="alert alert-danger d-none" role="alert">
          information is incorrect
        </div> -->
        <form action="#" id=<%=id %> >
          <div class="form-group">
            <label for="name">Product Name</label>
            <input type="text" class="form-control" id="name" name="name" value=<%=name %> placeholder="Enter Product Name">
          </div>
          <div class="form-group">
            <label for="desc">Product Description</label>
            <input type="text" class="form-control" id="desc" name="desc" value=<%=desc %> placeholder="Enter Product Description">
          </div>
          <div class="form-group">
            <label for="qty">Product Quantity</label>
            <input type="number" class="form-control" id="qty" name="qty" value=<%=qty %> placeholder="Enter Quantity">
          </div>
          <div class="form-group">
            <label for="price">Product Price</label>
            <input type="number" class="form-control" id="price" name="price" value=<%=price %> placeholder="Enter Price">
          </div>
          <button class="btn btn-success" id="Update">Update</button>
        </form>
      </div>
      <div class="col-sm">
      </div>
    </div>
    </div>
  <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
